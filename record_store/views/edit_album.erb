<h1>Update <%= @album.name() %></h1>

<form action="/albums/<%= @album.id() %>" method="post">
  <input name="_method" type="hidden" value="patch">
  <div>
    <label for="name">Rename album</label>
    <input id="name" name="name" type="text">
  </div>
  <div>
    <label for="artist">Change artist</label>
    <input id="artist" name="artist" type="text">
  </div>
  <div>
    <label for="year">Change year</label>
    <input id="year" name="year" type="text">
  </div>
  <div>
    <label for="genre">Change genre</label>
    <input id="genre" name="genre" type="text">
  </div>
  <button type="submit">Update</button>
</form>

<form action="/albums/<%= @album.id() %>" method="post">
  <input name="_method" type="hidden" value="delete">

  <button type="submit">Delete album</button>
</form>

<p><a href="/albums">Return to album list</a></p>